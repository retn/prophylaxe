                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" >
                      
                      <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titel 1"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
