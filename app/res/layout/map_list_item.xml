<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:columnCount="2"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/mapListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:padding="2dp"
        android:text="@string/btn_anlaufstellen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mapListCity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/mapListTitle"
        android:layout_alignBottom="@+id/mapListTitle"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="@string/label_adress"
        android:textColor="@color/darkGrey" />

</RelativeLayout>